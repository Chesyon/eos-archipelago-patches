        message_SetFace(ACTOR_NPC_SHEIMI, FACE_NORMAL, FACE_POS_STANDARD);
        message_Talk({
            english=" Welcome to the [CS:P]Shaymin Village[CR]!",
            french=" Bienvenue au [CS:P]Village Shaymin[CR]!",
            german=" Willkommen in [CS:P]Shaymin-Dorf[CR]!",
            italian=" Vi do il benvenuto\nal [CS:P]Villaggio Shaymin[CR]!",
            spanish=" ¡Te doy la bienvenida a\n[CS:P]Aldea Shaymin[CR]!",
