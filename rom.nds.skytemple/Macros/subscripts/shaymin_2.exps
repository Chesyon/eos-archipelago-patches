        with(actor ACTOR_NPC_SHEIMI5) {
            SetEffect(EFFECT_NONE, 3);
        }
        message_SetFace(ACTOR_NPC_SHEIMI, FACE_NORMAL, FACE_POS_STANDARD);
        message_Talk({
            english=" But they're not bad, so please\nforgive them.",
            french=" Mais ce ne sont pas de mauvais\nbougres, alors il faut les excuser.",
            german=" Aber sie sind nicht bösartig,\nalso nimm es ihnen nicht übel.",
            italian=" Però non sono cattive, quindi\ncercate di perdonarle.",
            spanish=" Pero en el fondo no son malos,\nhay que perdonarlos.",
        });
        message_Close();
        jump @label_130;
    } elseif ($DUNGEON_CONQUEST_LIST[113]) {
