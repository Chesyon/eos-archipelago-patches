        }
        with(actor ACTOR_NPC_SHEIMI5) {
            WaitEffect();
        }
        WaitExecuteLives(ACTOR_NPC_SHEIMI5);
        message_Talk({
            english=" Ah! What am I saying? Oops...",
            french=" Eh! Mais qu'est-ce que\nje raconte, moi? Oups...",
            german=" Oha! Was sage ich da? Ups...",
            italian=" Ah! Ma che sto dicendo? Ooops...",
            spanish=" ¡Huy! ¿Pero qué digo? Jo...",
        });
        message_Close();
        jump @label_130;
    } elseif ($DUNGEON_CONQUEST_LIST[121]) {
