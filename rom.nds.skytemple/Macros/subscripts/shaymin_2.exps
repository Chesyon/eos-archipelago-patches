            Turn2DirectionLives(4, 10, ACTOR_NPC_SHEIMI5);
        }
        message_SetFace(ACTOR_NPC_SHEIMI, FACE_NORMAL, FACE_POS_STANDARD);
        message_Talk({
            english=" I wonder how [CS:N]Ampharos[CR] is doing\nat the 8th Station Clearing...",
            french=" Je me demande comment\nça se passe pour [CS:N]Pharamp[CR],\nà la trouée du 8[F:E] Relais.",
