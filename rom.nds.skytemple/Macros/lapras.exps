                    message_Talk(" Off we go to the [CS:P]Temporal Tower[CR].");
                } else {
                    message_Talk({
                        english=" Off we go to the [CS:P]Hidden Land[CR].",
                        french=" En route pour les [CS:P]Terres\nIllusoires[CR].",
                        german=" Auf in das [CS:P]Verborgene Land[CR].",
                        italian=" Andiamo alla [CS:P]Terra Nascosta[CR].",
                        spanish=" Vamos a la [CS:P]Tierra Oculta[CR].",
                    });
