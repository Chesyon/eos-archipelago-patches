macro LaprasTransport() {
    if ($GROUND_ENTER == LEVEL_D27P11A) {
        CallCommon(CORO_SUBSCREEN_INIT);
        message_SetFace(ACTOR_NPC_RAPURASU, FACE_NORMAL, FACE_POS_STANDARD);
        message_Talk({
            english=" Would you like to return to\nTreasure Town now?",
            french=" Voulez-vous regagner\nBourg-Trésor maintenant?",
            german=" Möchtet ihr jetzt nach\nSchatzstadt zurückkehren?",
            italian=" Volete tornare a Borgo Tesoro?",
            spanish=" ¿Queréis volver a Aldea Tesoro?",
        });
        switch ( message_SwitchMenu(0, 1) ) {
            case menu({
                english="Yes",
                french="Oui",
                german="Ja",
                italian="Sì",
                spanish="Sí",
            }):
                CallCommon(CORO_MESSAGE_CLOSE_WAIT_FUNC);
                if ($DUNGEON_CONQUEST_LIST[40]) {
                    debug_Print("Grovyle Dead?");
                    if ($SCENARIO_TALK_BIT_FLAG[43]) {
                    } else {
                        ~GrovyleIsKill();
                    }
                }
                CallCommon(CORO_MESSAGE_CLOSE_WAIT_FUNC);
                message_SetFace(ACTOR_NPC_RAPURASU, FACE_NORMAL, FACE_POS_STANDARD);
                message_Talk({
                    english=" I see.",
                    french=" Je vois.",
                    german=" Ich verstehe.",
                    italian=" Capisco.",
                    spanish=" Entiendo.",
                });
                message_Talk({
                    english=" Off we go to Treasure Town!",
                    french=" En route pour Bourg-Trésor!",
                    german=" Auf nach Schatzstadt!",
                    italian=" Andiamo a Borgo Tesoro!",
                    spanish=" ¡Vamos a Aldea Tesoro!",
                });
                message_Close();
                bgm_FadeOut(60);
                main_EnterGround(LEVEL_D01P11A, 30);
                hold;
            case menu({
                english="No",
                french="Non",
                german="Nein",
                italian="No",
                spanish="No",
            }):
            default:
                §label_135;
                CallCommon(CORO_MESSAGE_CLOSE_WAIT_FUNC);
                message_SetFace(ACTOR_NPC_RAPURASU, FACE_NORMAL, FACE_POS_STANDARD);
                message_Talk({
                    english=" I see.",
                    french=" Je vois.",
                    german=" Ich verstehe.",
                    italian=" Capisco.",
                    spanish=" Entiendo.",
                });
                message_Talk({
                    english=" Then good luck reaching\n[CS:P]Temporal Tower[CR]!",
                    french=" Bonne chance pour atteindre\nla [CS:P]Tour du Temps[CR]!",
                    german=" Dann viel Glück für den Weg\nzum [CS:P]Zeitturm[CR]!",
                    italian=" Allora in bocca al lupo per il\nviaggio verso la [CS:P]Torre del Tempo[CR]!",
                    spanish=" Espero que tengáis suerte y que\nconsigáis llegar a la [CS:P]Torre del Tiempo[CR].",
                });
                message_Close();
                §lapras_getout;
                break;
        }
    } elseif ($GROUND_ENTER == LEVEL_D01P11A) {
        if ($DUNGEON_CONQUEST_LIST[40]) {
            if ($DUNGEON_OPEN_LIST[41]) {            
                message_SetFace(ACTOR_NPC_RAPURASU, FACE_NORMAL, FACE_POS_STANDARD);
                message_Talk(" Would you like to go to the\n[CS:P]Hidden Land[CR], or [CS:P]Temporal Tower[CR]?");
                switch ( message_SwitchMenu(0, 1) ) {
                    case menu("[CS:P]Temporal Tower[CR]"):
                        $EVENT_LOCAL = 1;
                    case menu("[CS:P]Hidden Land[CR]"):
                        break;
                    case menu("Never Mind"):
                        jump @lapras_maybe_later;
                }
            } else {
                jump @hidden_land_only;
            }
        } else {
            §hidden_land_only;
            message_Talk({
                english=" Would you like to go to the\n[CS:P]Hidden Land[CR]?",
                french=" Voulez-vous aller dans les\n[CS:P]Terres Illusoires[CR]?",
                german=" Möchtet ihr in das\n[CS:P]Verborgene Land[CR] reisen?",
                italian=" Volete andare alla [CS:P]Terra[CR]\n[CS:P]Nascosta[CR]?",
                spanish=" ¿Queréis ir a la [CS:P]Tierra Oculta[CR]?",
            });
            switch ( message_SwitchMenu(0, 1) ) {
                case menu({
                    english="Yes",
                    french="Oui",
                    german="Ja",
                    italian="Sì",
                    spanish="Sí",
                }):
                    break;
                case menu({
                    english="No",
                    french="Non",
                    german="Nein",
                    italian="No",
                    spanish="No",
                }):
                default:
                    jump @lapras_maybe_later;
            }
        }
        CallCommon(CORO_MESSAGE_CLOSE_WAIT_FUNC);
        §lapras_travel;
        switch ( ProcessSpecial(PROCESS_SPECIAL_IS_TEAM_SETUP_HERO_AND_PARTNER_ONLY, 0, 0) ) {
            case 1:
                message_SetFace(ACTOR_NPC_RAPURASU, FACE_NORMAL, FACE_POS_STANDARD);
                message_Talk({
                    english=" I see.",
                    french=" Je vois.",
                    german=" Ich verstehe.",
                    italian=" Capisco.",
                    spanish=" Entiendo.",
                });
