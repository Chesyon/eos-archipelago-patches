                message_Close();
                bgm_FadeOut(60);
                screen_FadeOut(1,30);
                Wait(30);
                if ($EVENT_LOCAL > 0) {
                    main_EnterGround(LEVEL_D29P11A, 30);
                } else {
                    main_EnterGround(LEVEL_D27P11A, 30);
                    hold;
                }
                hold;
            default:
                switch ( ProcessSpecial(PROCESS_SPECIAL_IS_TEAM_SETUP_PARTNER_AND_HERO_ONLY, 0, 0) ) {
